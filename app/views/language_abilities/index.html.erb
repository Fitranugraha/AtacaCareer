<% provide(:title, "Listing language_abilities") %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Profile</th>
      <th>Language</th>
      <th>Speech</th>
      <th>Writing</th>
      <th>Reading</th>
      <th>Notes</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @language_abilities.each do |language_ability| %>
      <tr>
        <td><%= language_ability.profile_id %></td>
        <td><%= language_ability.language %></td>
        <td><%= language_ability.speech %></td>
        <td><%= language_ability.writing %></td>
        <td><%= language_ability.reading %></td>
        <td><%= language_ability.notes %></td>
        <td>
          <div class="btn-group">
            <%= link_to language_ability, :class => "btn btn-xs btn-default" do %>
              <%= fa_icon("eye", :text => "Show") %>
            <% end %>
            <%= link_to edit_language_ability_path(language_ability), :class => "btn btn-xs btn-default" do %>
              <%= fa_icon("pencil", :text => "Edit") %>
            <% end %>
            <%= link_to language_ability, :class => "btn btn-xs btn-danger", :method => :delete, :data => { :confirm => "Are you sure you want to delete this language_ability?" } do %>
              <%= fa_icon("trash-o", :text => "Destroy") %>
            <% end %>
          </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_language_ability_path, :class => "btn btn-default" do %>
  <%= fa_icon("plus", :text => "New Language ability") %>
<% end %>
