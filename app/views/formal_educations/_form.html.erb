<%= bootstrap_form_for(@formal_education) do |f| %>

  <%= f.alert_message "Please review the problems below:" %>

  <%= f.number_field :profile_id %>
  <%= f.text_field :level %>
  <%= f.text_field :institution %>
  <%= f.date_select :start_date %>
  <%= f.date_select :end_date %>
  <%= f.text_field :certification %>
  <%= f.text_field :faculty %>
  <%= f.text_field :department %>

  <%= f.primary %>
  <%= link_to "Back", formal_educations_path, :class => "btn btn-link" %>

<% end %>
