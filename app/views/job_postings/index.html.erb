<% provide(:title, "Listing job_postings") %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Code</th>
      <th>Position</th>
      <th>Description</th>
      <th>Requirement</th>
      <th>Post date</th>
      <th>Expired date</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @job_postings.each do |job_posting| %>
      <tr>
        <td><%= job_posting.code %></td>
        <td><%= job_posting.position %></td>
        <td><%= job_posting.description %></td>
        <td><%= job_posting.requirement %></td>
        <td><%= job_posting.post_date %></td>
        <td><%= job_posting.expired_date %></td>
        <td>
          <div class="btn-group">
            <%= link_to job_posting, :class => "btn btn-xs btn-default" do %>
              <%= fa_icon("eye", :text => "Show") %>
            <% end %>
            <%= link_to edit_job_posting_path(job_posting), :class => "btn btn-xs btn-default" do %>
              <%= fa_icon("pencil", :text => "Edit") %>
            <% end %>
            <%= link_to job_posting, :class => "btn btn-xs btn-danger", :method => :delete, :data => { :confirm => "Are you sure you want to delete this job_posting?" } do %>
              <%= fa_icon("trash-o", :text => "Destroy") %>
            <% end %>
          </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_job_posting_path, :class => "btn btn-default" do %>
  <%= fa_icon("plus", :text => "New Job posting") %>
<% end %>
