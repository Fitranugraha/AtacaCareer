<% provide(:title, "Listing profiles") %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>User</th>
      <th>No</th>
      <th>Name</th>
      <th>Id no</th>
      <th>Nationality</th>
      <th>Tribe</th>
      <th>Place of birth</th>
      <th>Date of birth</th>
      <th>Height</th>
      <th>Weight</th>
      <th>Blood</th>
      <th>Sex</th>
      <th>Married</th>
      <th>Religion</th>
      <th>Address as</th>
      <th>Current address</th>
      <th>Phone</th>
      <th>Mobile phone</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.user_id %></td>
        <td><%= profile.no %></td>
        <td><%= profile.name %></td>
        <td><%= profile.id_no %></td>
        <td><%= profile.nationality %></td>
        <td><%= profile.tribe %></td>
        <td><%= profile.place_of_birth %></td>
        <td><%= profile.date_of_birth %></td>
        <td><%= profile.height %></td>
        <td><%= profile.weight %></td>
        <td><%= profile.blood %></td>
        <td><%= profile.sex %></td>
        <td><%= profile.married %></td>
        <td><%= profile.religion %></td>
        <td><%= profile.address_as_id %></td>
        <td><%= profile.current_address %></td>
        <td><%= profile.phone %></td>
        <td><%= profile.mobile_phone %></td>
        <td>
          <div class="btn-group">
            <%= link_to profile, :class => "btn btn-xs btn-default" do %>
              <%= fa_icon("eye", :text => "Show") %>
            <% end %>
            <%= link_to edit_profile_path(profile), :class => "btn btn-xs btn-default" do %>
              <%= fa_icon("pencil", :text => "Edit") %>
            <% end %>
            <%= link_to profile, :class => "btn btn-xs btn-danger", :method => :delete, :data => { :confirm => "Are you sure you want to delete this profile?" } do %>
              <%= fa_icon("trash-o", :text => "Destroy") %>
            <% end %>
          </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_profile_path, :class => "btn btn-default" do %>
  <%= fa_icon("plus", :text => "New Profile") %>
<% end %>
